            <ToggleGroup fx:id="gameLevel" />
         </toggleGroup>
      </RadioButton>
      <ImageView fitHeight="31.0" fitWidth="92.0" layoutX="179.0" layoutY="78.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@easy.png" />
         </image>
