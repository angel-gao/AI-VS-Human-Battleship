            <Image url="@userfirst.png" />
         </image>
         <effect>
            <ColorAdjust contrast="1.0" hue="0.64" saturation="1.0" />
         </effect>
      </ImageView>
      <RadioButton fx:id="computerFirstButton" layoutX="76.0" layoutY="210.0" mnemonicParsing="false" onAction="#getOrder" selected="true" toggleGroup="$turnOrder">
