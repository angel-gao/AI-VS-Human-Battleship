            <ColorAdjust contrast="1.0" hue="-0.3" saturation="1.0" />
         </effect>
      </ImageView>
      <RadioButton fx:id="hardButton" layoutX="330.0" layoutY="81.0" mnemonicParsing="false" onAction="#getLevel" toggleGroup="$gameLevel">
