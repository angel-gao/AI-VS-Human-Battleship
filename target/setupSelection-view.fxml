         <image>
            <Image url="@compfirst.png" />
         </image>
      </ImageView>
      <Button fx:id="confirmButton" layoutX="149.0" layoutY="330.0" mnemonicParsing="false" onAction="#confirmAndStartGame" text="Confirm and Start Game!">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <ImageView fitHeight="45.0" fitWidth="344.0" layoutX="124.0" layoutY="23.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@selectgame.png" />
         </image>
         <effect>
            <ColorAdjust contrast="1.0" hue="-0.66" saturation="1.0" />
         </effect>
      </ImageView>
      <ImageView fitHeight="42.0" fitWidth="419.0" layoutX="87.0" layoutY="143.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@whoshootfirst.png" />
         </image>
         <effect>
            <ColorAdjust contrast="1.0" hue="-0.66" saturation="1.0" />
         </effect>
      </ImageView>
