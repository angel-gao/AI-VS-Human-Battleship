            <Image url="@hard.png" />
         </image>
         <effect>
            <ColorAdjust contrast="1.0" hue="-0.3" saturation="1.0" />
         </effect>
      </ImageView>
      <RadioButton fx:id="userFirstButton" layoutX="367.0" layoutY="210.0" mnemonicParsing="false" onAction="#getOrder">
         <font>
            <Font size="18.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="turnOrder" />
         </toggleGroup>
      </RadioButton>
      <ImageView fitHeight="31.0" fitWidth="133.0" layoutX="396.0" layoutY="208.0" pickOnBounds="true" preserveRatio="true">
